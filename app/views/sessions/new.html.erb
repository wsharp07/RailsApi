<%= form_for(:register, url: '#', :html => {:class => 'register-form'}) do |f| %>
    <h3>Sign Up</h3>
    <p class="hint">
      Enter your personal details below:
    </p>
    <div class="form-group">
      <%= f.label :full_name, class: 'control-label visible-ie8 visible-ie9' %>
      <%= f.text_field :full_name, class: 'form-control placeholder-no-fix', placeholder: 'Full Name' %>
    </div>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <%= f.label :email, class: 'control-label visible-ie8 visible-ie9' %>
      <%= f.text_field :email, class: 'form-control placeholder-no-fix', placeholder: 'Email' %>
    </div>
    <p class="hint">
      Enter your account details below:
    </p>
    <div class="form-group">
      <%= f.label :username, class: 'control-label visible-ie8 visible-ie9' %>
      <%= f.text_field :username, class: 'form-control placeholder-no-fix', autocomplete: 'off', placeholder: 'Username' %>
    </div>
    <div class="form-group">
      <%= f.label :register_password, class: 'control-label visible-ie8 visible-ie9' %>
      <%= f.password_field :register_password, class: 'form-control placeholder-no-fix', autocomplete: 'off', placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <%= f.label :rpassword, class: 'control-label visible-ie8 visible-ie9' %>
      <%= f.password_field :rpassword, class: 'form-control placeholder-no-fix', autocomplete: 'off', placeholder: 'Re-type Your Password' %>
    </div>
    <div class="form-actions">
      <%= f.button "Back", class: 'btn btn-default', type: 'button', id: 'register-back-btn' %>
      <%= f.button "Submit", class: 'btn btn-success uppercase pull-right', type: 'submit' %>
    </div>
<% end %>

