<% end %>

<%= form_for(:password_reset, url: password_resets_path, :html => {:class => 'forget-form'}) do |f| %>
    <h3>Forget Password ?</h3>
    <p>
      Enter your e-mail address below to reset your password.
    </p>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control placeholder-no-fix', autocomplete: 'off', placeholder: 'Email' %>
    </div>
    <div class="form-actions">
      <%= f.button "Back", class: 'btn btn-default', type: 'button', id: 'back-btn' %>
      <%= f.button "Submit", class: 'btn btn-success uppercase pull-right', type: 'submit' %>
    </div>
<% end %>


